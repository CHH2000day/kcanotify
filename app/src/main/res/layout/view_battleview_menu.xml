<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:padding="12dp"
        android:layout_width="350dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_menu">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:id="@+id/view_head">

                <TextView
                    android:text="@string/battleview_menu_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:id="@+id/view_cancel"
                    android:layout_width="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_cancel" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray"
                android:paddingBottom="0.5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:scaleType="fitXY"
                android:src="@android:drawable/divider_horizontal_bright"
                android:layout_gravity="left|clip_vertical"
                android:layout_weight="1"
                android:layout_marginBottom="1dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:text="@string/battleview_menu0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_item0"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textSize="20dp" />

                    <TextView
                        android:text="@string/battleview_menu1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_item1"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textSize="20dp" />

                    <TextView
                        android:text="@string/battleview_menu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_item2"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:padding="8dp"
                        android:textSize="20dp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>